{
  "name": "@idle-engine/core",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.browser.d.ts",
        "default": "./dist/index.browser.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./public": {
      "browser": {
        "types": "./dist/index.browser.d.ts",
        "default": "./dist/index.browser.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./internals": {
      "browser": {
        "types": "./dist/internals.browser.d.ts",
        "default": "./dist/internals.browser.js"
      },
      "default": {
        "types": "./dist/internals.d.ts",
        "default": "./dist/internals.js"
      }
    },
    "./harness": {
      "browser": {
        "types": "./dist/harness.browser.d.ts",
        "default": "./dist/harness.browser.js"
      },
      "default": {
        "types": "./dist/harness.d.ts",
        "default": "./dist/harness.js"
      }
    },
    "./prometheus": {
      "types": "./dist/prometheus.d.ts",
      "default": "./dist/prometheus.js"
    }
  },
  "scripts": {
    "prebuild": "node ../../tools/scripts/generate-version.mjs",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint --max-warnings=0 'src/**/*.ts'",
    "test": "vitest",
    "test:schema-compat": "pnpm --filter @idle-engine/content-schema build && vitest run --passWithNoTests src/__tests__/schema-compat.test.ts",
    "test:ci": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit -p tsconfig.test.json",
    "benchmark": "pnpm run build && node benchmarks/event-frame-format.bench.mjs && node benchmarks/event-broadcast-batching.bench.mjs && node benchmarks/diagnostic-timeline-overhead.bench.mjs && node benchmarks/state-sync-checksum.bench.mjs",
    "benchmark:diagnostics": "pnpm run build && node benchmarks/diagnostic-timeline-overhead.bench.mjs",
    "benchmark:checksum": "pnpm run build && node benchmarks/state-sync-checksum.bench.mjs",
    "prepublishOnly": "pnpm run test:schema-compat"
  },
  "dependencies": {
    "@idle-engine/content-schema": "workspace:*",
    "@idle-engine/renderer-contract": "workspace:*",
    "prom-client": "^15.1.1"
  },
  "devDependencies": {
    "@idle-engine/config-eslint": "workspace:*",
    "@idle-engine/config-vitest": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "fast-check": "^4.3.0",
    "rimraf": "^6.0.1",
    "tinybench": "^2.9.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vitest-llm-reporter": "^1.2.0"
  }
}
