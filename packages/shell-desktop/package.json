{
  "name": "@idle-engine/shell-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && node ../../tools/scripts/copy-renderer-assets.mjs",
    "start": "pnpm run build && electron ./dist/main.js",
    "lint": "eslint --max-warnings=0 'src/**/*.ts'",
    "test": "vitest",
    "test:ci": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@idle-engine/config-eslint": "workspace:*",
    "@idle-engine/config-vitest": "workspace:*",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^3.2.4",
    "electron": "^32.3.1",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vitest-llm-reporter": "^1.2.0"
  }
}
