{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "../..",
    "paths": {
      "@idle-engine/core": [
        "packages/core/src/index.ts",
        "packages/core/src/index.d.ts"
      ],
      "@idle-engine/core/*": [
        "packages/core/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

