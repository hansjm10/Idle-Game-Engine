{
  "name": "@idle-engine/content-schema",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime-helpers": {
      "import": "./dist/runtime-helpers.js",
      "types": "./dist/runtime-helpers.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint --max-warnings=0 'src/**/*.ts'",
    "test": "vitest",
    "test:ci": "vitest run --passWithNoTests",
    "coverage": "vitest run --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit -p tsconfig.test.json",
    "bench": "node benchmarks/validation.bench.mjs",
    "bench:check": "node benchmarks/run-benchmarks.mjs",
    "bench:update-baseline": "node benchmarks/run-benchmarks.mjs --update-baseline"
  },
  "dependencies": {
    "fast-check": "^4.3.0",
    "semver": "^7.6.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@idle-engine/config-eslint": "workspace:*",
    "@idle-engine/config-vitest": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.5.8",
    "eslint": "^9.37.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vitest-llm-reporter": "^1.2.0"
  }
}
